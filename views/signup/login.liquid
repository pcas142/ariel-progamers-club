{% layout "layout.liquid" %}
{% block content %}
<header>
    <div class="bannerDiv">
        {% comment %} <img src="https://i.ibb.co/dWwnQzf/avatarverse.jpg" alt="avatarverse" border="0" width="600" height="175"> {% endcomment %}
        <h1>Ariel Progamer's Club</h1>
        </div>
</header>
<div>
    <form action="/user/login" method="post">
        <fieldset>
            <legend>Inicio de Sesión de Usuario</legend>
            <label>Nombre de Usuario:
                <input type="text" name="username" required />
            </label>
            <br>
            <label>Clave:
                <input type="password" name="password" required />
            </label>
            <br>
            <br>
            <input type="submit" value="Iniciar Sesión" />
        </fieldset>
    </form>
</div>
{% endblock %}