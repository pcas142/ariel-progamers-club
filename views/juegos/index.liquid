{% layout "layout.liquid" %} {% block content %}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ariel Progamer's Club</title>
</head>

<body>
    <div class="bannerDiv">
        <h1>Ariel Progamer's Club</h1>
    </div>
    <div class="navBar">
        <a href="/juegos/nuevo"><button>Haga Clic Aquí Para Entrar Nueva Sesión de Juego</button></a><br>
        <a href="/juegos/juegosdehoy"><button>Haga Clic Aquí Para Ver Registros Juegos de Hoy</button></a><br>
        <a href="/juegos/totaldehoy"><button>Haga Clic Aquí Para Ver Ingresos Totales de Hoy</button></a><br>
        <a href="/juegos/todosjuegos"><button>Haga Clic Aquí Para Ver Registros Completo</button></a><br>
        <a href="/user/logout"><button>Cerrar Sesión</button></a>
    </div>

    <br>
    <br>
    <div class="container">
        {%for juego in juegos%}
        <div>
            <h3>Estación: {{juego.station}} - Duración: {{juego.duration}} - Precio: RD$ {{juego.price}} - Tiempo de Entrada: {{juego.dateString}} {{juego.timeString}}</h3>
        </div>
        {%endfor%}
    </div>
</body>

{% endblock %}